-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.CoreGui
screenGui.Name = "RAIN MODZ SCRIPT HUB"

-- Create the main frame with rounded corners, shadow, and wide layout
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 600, 0, 450)  -- Wider frame
mainFrame.Position = UDim2.new(0.5, -300, 0.5, -225)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui
mainFrame.Active = true
mainFrame.Draggable = true  -- Makes the hub draggable

-- UICorner for rounded edges
local mainUICorner = Instance.new("UICorner")
mainUICorner.CornerRadius = UDim.new(0, 10)
mainUICorner.Parent = mainFrame

-- Shadow effect
local shadowFrame = Instance.new("ImageLabel")
shadowFrame.Size = UDim2.new(1, 30, 1, 30)
shadowFrame.Position = UDim2.new(0, -15, 0, -15)
shadowFrame.BackgroundTransparency = 1
shadowFrame.Image = "rbxassetid://1316045217" -- Shadow image
shadowFrame.ImageTransparency = 0.5
shadowFrame.ImageColor3 = Color3.new(0, 0, 0)
shadowFrame.ZIndex = 0
shadowFrame.Parent = mainFrame

-- Title Label with modern styling
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 60)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Cool Script Hub with Tabs"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextSize = 28
titleLabel.Parent = mainFrame

-- Sidebar Frame for tabs
local sidebarFrame = Instance.new("Frame")
sidebarFrame.Size = UDim2.new(0, 150, 1, -60)  -- Adjusted size for sidebar
sidebarFrame.Position = UDim2.new(0, 10, 0, 60)  -- Offset sidebar slightly
sidebarFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
sidebarFrame.BorderSizePixel = 0
sidebarFrame.Parent = mainFrame

-- UICorner for rounded edges on sidebar
local sidebarCorner = Instance.new("UICorner")
sidebarCorner.CornerRadius = UDim.new(0, 8)
sidebarCorner.Parent = sidebarFrame

-- Main content frame (where script buttons or content will be displayed)
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, -170, 1, -70)  -- Adjusted size for content area
contentFrame.Position = UDim2.new(0, 160, 0, 60)
contentFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
contentFrame.BorderSizePixel = 0
contentFrame.Parent = mainFrame

-- UICorner for rounded edges on content frame
local contentCorner = Instance.new("UICorner")
contentCorner.CornerRadius = UDim.new(0, 8)
contentCorner.Parent = contentFrame

-- Minimize toggle state
local isMinimized = false

-- Minimize Button
local minimizeButton = Instance.new("TextButton")
minimizeButton.Size = UDim2.new(0, 30, 0, 30)
minimizeButton.Position = UDim2.new(1, -80, 0, 10) -- Positioned to the left of the exit button
minimizeButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
minimizeButton.Text = "-"
minimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
minimizeButton.Font = Enum.Font.GothamBold
minimizeButton.TextSize = 20
minimizeButton.Parent = mainFrame

-- Rounded corner for minimize button
local minimizeCorner = Instance.new("UICorner")
minimizeCorner.CornerRadius = UDim.new(0, 8)
minimizeCorner.Parent = minimizeButton

-- Minimize button functionality
minimizeButton.MouseButton1Click:Connect(function()
    if isMinimized then
        -- Expand content
        contentFrame.Visible = true
        sidebarFrame.Visible = true -- Show the sidebar with tabs
        mainFrame.Size = UDim2.new(0, 600, 0, 450) -- Original size
        minimizeButton.Text = "-"
    else
        -- Minimize content (show only sidebar and title)
        contentFrame.Visible = false
        sidebarFrame.Visible = false -- Hide the sidebar with tabs
        mainFrame.Size = UDim2.new(0, 600, 0, 100) -- Shrinked height
        minimizeButton.Text = "+"
    end
    isMinimized = not isMinimized
end)

-- Function to create a stylish tab button with adjusted spacing
local function createTabButton(name, index, callback)
    local tabButton = Instance.new("TextButton")
    tabButton.Size = UDim2.new(1, -20, 0, 50)
    tabButton.Position = UDim2.new(0, 10, 0, 10 + (index - 1) * 70)  -- Added more vertical spacing between tabs
    tabButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    tabButton.Text = name
    tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    tabButton.Font = Enum.Font.Gotham
    tabButton.TextSize = 20
    tabButton.Parent = sidebarFrame

    -- Rounded corners for tab button
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 8)
    buttonCorner.Parent = tabButton

    -- Tab button callback
    tabButton.MouseButton1Click:Connect(callback)
end

-- Function to create a stylish content button in the main area
local function createContentButton(name, position, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0.8, 0, 0, 50)
    button.Position = UDim2.new(0.1, 0, 0, position)
    button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    button.Text = name
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Gotham
    button.TextSize = 20
    button.Parent = contentFrame

    -- Rounded corners for content button
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 8)
    buttonCorner.Parent = button

    -- Button callback
    button.MouseButton1Click:Connect(callback)
end

-- Clear existing content in the content frame
local function clearContent()
    for _, child in ipairs(contentFrame:GetChildren()) do
        if child:IsA("GuiObject") then
            child:Destroy()
        end
    end
end

-- Tab 1 (Script 1 with Speed Slider, Fling, Fly, Jump Power)
createTabButton("PLAYER", 1, function()
    clearContent()

    -- Speed Slider
    local speedSliderFrame = Instance.new("Frame")
    speedSliderFrame.Size = UDim2.new(0.8, 0, 0, 60)
    speedSliderFrame.Position = UDim2.new(0.1, 0, 0, 20)
    speedSliderFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    speedSliderFrame.Parent = contentFrame

    local track = Instance.new("Frame")
    track.Size = UDim2.new(1, 0, 0, 10)
    track.Position = UDim2.new(0, 0, 0, 20)
    track.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    track.BorderSizePixel = 0
    track.Parent = speedSliderFrame

    local sliderHandle = Instance.new("Frame")
    sliderHandle.Size = UDim2.new(0, 20, 0, 30)
    sliderHandle.Position = UDim2.new(0, 0, 0, -5)
    sliderHandle.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    sliderHandle.BorderSizePixel = 0
    sliderHandle.Parent = track

    local speedLabel = Instance.new("TextLabel")
    speedLabel.Size = UDim2.new(1, 0, 0, 20)
    speedLabel.Position = UDim2.new(0, 0, 1, 0)
    speedLabel.BackgroundTransparency = 1
    speedLabel.Text = "Player Speed: 16"
    speedLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    speedLabel.Font = Enum.Font.Gotham
    speedLabel.TextSize = 20
    speedLabel.Parent = speedSliderFrame

    -- Slider functionality
    local dragging = false
    local speedSlider = Instance.new("TextButton")
    speedSlider.Size = UDim2.new(1, 0, 0, 10)
    speedSlider.Position = UDim2.new(0, 0, 0, 0)
    speedSlider.BackgroundTransparency = 1
    speedSlider.Text = ""
    speedSlider.Parent = track

    speedSlider.MouseButton1Down:Connect(function(x, y)
        dragging = true
    end)

    speedSlider.MouseMoved:Connect(function(x, y)
        if dragging then
            local mouseX = x
            local trackWidth = track.AbsoluteSize.X
            local value = math.clamp((mouseX - track.AbsolutePosition.X) / trackWidth, 0, 1)
            sliderHandle.Position = UDim2.new(value, 0, 0, -5)
            local speed = math.floor(16 + value * 184)  -- Speed range from 16 to 200
            speedLabel.Text = "Player Speed: " .. speed
            local player = game.Players.LocalPlayer
            if player.Character and player.Character:FindFirstChild("Humanoid") then
                player.Character.Humanoid.WalkSpeed = speed
            end
        end
    end)

    speedSlider.MouseButton1Up:Connect(function()
        dragging = false
    end)

    -- Fly Button
    createContentButton("Fly", 80, function()
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            local flying = Instance.new("BodyVelocity")
            flying.MaxForce = Vector3.new(10000, 10000, 10000)
            flying.Velocity = Vector3.new(0, 0, 0)
            flying.Parent = character.HumanoidRootPart

            -- Key press to stop flying
            local userInputService = game:GetService("UserInputService")
            userInputService.InputBegan:Connect(function(input, gameProcessed)
                if not gameProcessed and input.KeyCode == Enum.KeyCode.Space then
                    flying:Destroy()
                end
            end)
        end
    end)

    -- Fling Button
    createContentButton("Fling", 140, function()
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            local flingVelocity = Instance.new("BodyVelocity")
            flingVelocity.MaxForce = Vector3.new(10000, 10000, 10000)
            flingVelocity.Velocity = Vector3.new(0, 500, 0)
            flingVelocity.Parent = character.HumanoidRootPart
        end
    end)

    -- Jump Power Slider
    local jumpSliderFrame = Instance.new("Frame")
    jumpSliderFrame.Size = UDim2.new(0.8, 0, 0, 60)
    jumpSliderFrame.Position = UDim2.new(0.1, 0, 0, 200)
    jumpSliderFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    jumpSliderFrame.Parent = contentFrame

    local jumpTrack = Instance.new("Frame")
    jumpTrack.Size = UDim2.new(1, 0, 0, 10)
    jumpTrack.Position = UDim2.new(0, 0, 0, 20)
    jumpTrack.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    jumpTrack.BorderSizePixel = 0
    jumpTrack.Parent = jumpSliderFrame

    local jumpSliderHandle = Instance.new("Frame")
    jumpSliderHandle.Size = UDim2.new(0, 20, 0, 30)
    jumpSliderHandle.Position = UDim2.new(0, 0, 0, -5)
    jumpSliderHandle.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    jumpSliderHandle.BorderSizePixel = 0
    jumpSliderHandle.Parent = jumpTrack

    local jumpLabel = Instance.new("TextLabel")
    jumpLabel.Size = UDim2.new(1, 0, 0, 20)
    jumpLabel.Position = UDim2.new(0, 0, 1, 0)
    jumpLabel.BackgroundTransparency = 1
    jumpLabel.Text = "Jump Power: 50"
    jumpLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    jumpLabel.Font = Enum.Font.Gotham
    jumpLabel.TextSize = 20
    jumpLabel.Parent = jumpSliderFrame

    -- Slider functionality for Jump Power
    local jumpDragging = false
    local jumpSlider = Instance.new("TextButton")
    jumpSlider.Size = UDim2.new(1, 0, 0, 10)
    jumpSlider.Position = UDim2.new(0, 0, 0, 0)
    jumpSlider.BackgroundTransparency = 1
    jumpSlider.Text = ""
    jumpSlider.Parent = jumpTrack

    jumpSlider.MouseButton1Down:Connect(function(x, y)
        jumpDragging = true
    end)

    jumpSlider.MouseMoved:Connect(function(x, y)
        if jumpDragging then
            local mouseX = x
            local trackWidth = jumpTrack.AbsoluteSize.X
            local value = math.clamp((mouseX - jumpTrack.AbsolutePosition.X) / trackWidth, 0, 1)
            jumpSliderHandle.Position = UDim2.new(value, 0, 0, -5)
            local jump = math.floor(50 + value * 150)  -- Jump power range from 50 to 200
            jumpLabel.Text = "Jump Power: " .. jump
            local player = game.Players.LocalPlayer
            if player.Character and player.Character:FindFirstChild("Humanoid") then
                player.Character.Humanoid.JumpPower = jump
            end
        end
    end)

    jumpSlider.MouseButton1Up:Connect(function()
        jumpDragging = false
    end)
end)

-- Tab 2 (Script 2)
createTabButton("FARM{WORKING PROG}", 2, function()
    clearContent()
    createContentButton("Script 2", 20, function()
        print("Script 2 executed")
        -- Insert your script here
    end)
end)

-- Tab 3 (Script 3)
createTabButton("MISC{WORKING PROG}", 3, function()
    clearContent()
    createContentButton("Script 3", 20, function()
        print("Script 3 executed")
        -- Insert your script here
    end)
end)

-- Exit Button with hover effect
local exitButton = Instance.new("TextButton")
exitButton.Size = UDim2.new(0, 30, 0, 30)
exitButton.Position = UDim2.new(1, -40, 0, 10)
exitButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
exitButton.Text = "X"
exitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
exitButton.Font = Enum.Font.GothamBold
exitButton.TextSize = 20
exitButton.Parent = mainFrame

-- Rounded corner for exit button
local exitCorner = Instance.new("UICorner")
exitCorner.CornerRadius = UDim.new(0, 8)
exitCorner.Parent = exitButton

exitButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)
